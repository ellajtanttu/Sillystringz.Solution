@{
  Layout = "_Layout";
}

@model FactoryManager.Models.Machine

<h1>Edit machine: </h1>
<h4>Edit this machine: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{

  @Html.HiddenFor(model => model.MachineId)

  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name,
  new {required="required"})

  <input type="submit" value="Edit machine" class="btn btn-lg btn-dark"/>
}

<p>@Html.ActionLink("Delete this machine", "Delete", new { id = Model.MachineId })</p>
<p>@Html.ActionLink("return to Machines page", "Index")</p>
<p>@Html.ActionLink("Return to homepage", "Index", "Home")</p>