@{
  Layout = "_Layout";
}

@using FactoryManager.Models

@model List<FactoryManager.Models.Machine>

<h1>All Machines:</h1>

@if(@Model.Count == 0)
{
  <h3>No machines have been added yet.</h3>
}

@foreach(Machine machine in Model)
{
  <li>@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId})</li>
}

<p>@Html.ActionLink("Add a new machine", "Create")</p>
<p>@Html.ActionLink("Return to homepage", "Index", "Home")</p>