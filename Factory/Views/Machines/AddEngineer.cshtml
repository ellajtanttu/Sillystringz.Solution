@{
  Layout = "_Layout";
}

@model FactoryManager.Models.Machine

<h2>Add an engineer</h2>

<h4>Add engineer qualified to repair this machine: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.MachineId)

  @Html.Label("Select Engineer")
  @Html.DropDownList("EngineerId")

  <input type="submit" value="Save" class="btn btn-lg btn-dark"/>
}

<p>@Html.ActionLink("Back to machine list", "Index")</p>