@{
  Layout = "_Layout";
}

@model FactoryManager.Models.Engineer

<h2>Add a machine</h2>

<h4>Add machine to list of Engineers qualifications: @Html.DisplayFor(model => model.Name)</h4>
@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.Label("Select Machine")
  @Html.DropDownList("MachineId")

  <input type="submit" value="Save" class="btn btn-lg btn-dark"/>
}

<p>@Html.ActionLink("Back to engineer list", "Index")</p>