@{
  Layout = "_Layout";
}

@model FactoryManager.Models.Engineer

<h2>Edit Engineer</h2>

<h4>Edit this engineer: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.EngineerId)

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  <input type="submit" value="Save" class="btn btn-lg btn-dark"/>
}
<p>@Html.ActionLink("Delete Engineer", "Delete", new {id = Model.EngineerId})</p>
<p>@Html.ActionLink("Back to Engineer List", "index")</p>